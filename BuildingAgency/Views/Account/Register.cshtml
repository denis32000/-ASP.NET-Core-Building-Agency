@model BuildingAgency.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}
<h2>Sign Up</h2>

<a asp-action="Login" asp-controller="Account">Already have an account?</a>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly">
    </div>
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label">Email</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label">Password</label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-2 control-label">Confirm Password</label>
                <div class="col-md-10">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PassportNo" class="col-md-2 control-label">Your passport No</label>
                <div class="col-md-10">
                    <input type="text" asp-for="PassportNo" class="form-control" />
                    <span asp-validation-for="PassportNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sign Up" class="btn btn-default" />
                </div>
            </div>
        </div>
</form>

