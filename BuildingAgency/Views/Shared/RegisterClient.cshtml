@model BuildingAgency.Models.Client

@{
    ViewData["Title"] = "Register client";
}

<h2>New client information</h2>

<form asp-controller="Clients" asp-action="RegisterNewClient">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ClientPassportNo" class="col-md-2 control-label">Client passport</label>
            <div class="col-md-10">
                <input type="hidden" asp-for="ClientPassportNo" value="@Model.ClientPassportNo"/>
                <input class="form-control" value="@Model.ClientPassportNo" disabled="disabled" />
                <span asp-validation-for="ClientPassportNo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FullName" class="col-md-2 control-label">Full name</label>
            <div class="col-md-10">
                <input asp-for="FullName" value="@Model.FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PrefType" class="col-md-2 control-label">Preferable Type</label>
            <div class="col-md-10">
                <select asp-for="PrefType" class="form-control" asp-items="ViewBag.PrefType"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaxRent" class="col-md-2 control-label">Max rent cost</label>
            <div class="col-md-10">
                <input asp-for="MaxRent" value="@Model.MaxRent.ToString().Replace(",", ".")" class="form-control" />
                <span asp-validation-for="MaxRent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
