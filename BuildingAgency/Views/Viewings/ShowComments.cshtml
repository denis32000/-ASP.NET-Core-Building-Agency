@model IEnumerable<BuildingAgency.Models.Viewing>

@{
    ViewData["Title"] = "Comments";
}

<p />
<a asp-controller="PropertyForRents" asp-action="ValidPropertiesList">Back to Properties list</a>
<hr />

<div class="row main-block">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ViewDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ViewDate.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>