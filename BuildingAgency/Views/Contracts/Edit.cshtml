@model BuildingAgency.Models.Contract

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Contract</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ContractId" />
        <div class="form-group">
            <label asp-for="PropertyId" class="control-label col-md-2">Property No</label>
            <div class="col-md-10">
                <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyId"></select>
                <span asp-validation-for="PropertyId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PaymentMethod" class="col-md-2 control-label">Payment method</label>
            <div class="col-md-10">
                <input asp-for="PaymentMethod" class="form-control" />
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Paid" />
                    <label asp-for="Paid"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RentStart" class="col-md-2 control-label">Rent starts</label>
            <div class="col-md-10">
                <input asp-for="RentStart" class="form-control" type="date">
                <span asp-validation-for="RentStart" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RentFinish" class="col-md-2 control-label">Rent ends</label>
            <div class="col-md-10">
                <input asp-for="RentFinish" class="form-control" type="date">
                <span asp-validation-for="RentFinish" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Rent" class="col-md-2 control-label">Rent cost</label>
            <div class="col-md-10">
                <input asp-for="Rent" value="@Model.Rent.ToString().Replace(",", ".")" class="form-control" />
                <span asp-validation-for="Rent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Deposit" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Deposit" value="@Model.Rent.ToString().Replace(",", ".")" class="form-control" />
                <span asp-validation-for="Deposit" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ClientId" class="control-label col-md-2">Client passport</label>
            <div class="col-md-10">
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Duration" class="col-md-2 control-label">Duration (in days)</label>
            <div class="col-md-10">
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
