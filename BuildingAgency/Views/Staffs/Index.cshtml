@model IEnumerable<BuildingAgency.Models.Staff>

@{
    ViewData["Title"] = "Staff";
}

<p />
<a asp-controller="Account" asp-action="ControllPanel">Back to Control Panel</a>
<hr />

<div>
    <div class="form-group">

        <label class="col-md-2 control-label">Sort by</label>
        <div class="col-md-2">
            <select id="SortParam" class="form-control">
                @for (int i = 0; i < ViewBag.SortParams.Count; i++)
                {
                    <option>@ViewBag.SortParams[i]</option>
                }
            </select>
        </div>

        <label class="col-md-2 control-label">Search by</label>
        <div class="col-md-2">
            <select id="SearchParam" class="form-control">
                @for (int i = 0; i < ViewBag.SearchParams.Count; i++)
                {
                    <option>@ViewBag.SearchParams[i]</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <input id="SearchInput" class="form-control" placeholder="Looking for..." />
        </div>


        <button class="btn btn-primary" onclick="ajaxApplyFilters('Staffs', document.getElementById('SortParam').selectedIndex, document.getElementById('SearchParam').selectedIndex, $('#SearchInput').val());">Apply Filters</button>
        <a asp-controller="Staffs" asp-action="Index" class="btn btn-default">Reset Filters</a>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>
</div>

<div class="row main-block">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StaffPassportNo)
                </th>
                <th>
                    Client's full name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Superviser)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffPassportNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        @item.DateOfBirth.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Superviser.FullName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StaffId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.StaffId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.StaffId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>